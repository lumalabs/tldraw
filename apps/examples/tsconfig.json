{
	"extends": "../../internal/config/tsconfig.base.json",
	"include": ["src", "e2e", "./vite.config.ts", "**/*.json"],
	"exclude": ["node_modules", "dist", "**/*.css", ".tsbuild*", "./scripts/legacy-translations"],
	"compilerOptions": {
		"outDir": "./.tsbuild",
		"baseUrl": "./src",
		"paths": {
			"tldraw": ["../../packages/tldraw/src"],
			"react": ["../node_modules/react"],
			"react/*": ["../node_modules/react/*"]
		},
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"types": ["node", "@types/jest", "react"]
	},
	"references": [
		{
			"path": "../../packages/assets"
		},
		{
			"path": "../../packages/sync"
		},
		{
			"path": "../../packages/state"
		},
		{
			"path": "../../packages/tldraw"
		},
		{
			"path": "../../packages/dotcom-shared"
		}
	]
}
